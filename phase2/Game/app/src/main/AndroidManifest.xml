<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Tapioca Launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/LightDefaultTheme">
        <activity android:name=".ShopActivity"></activity>
        <activity android:name=".StatsActivity" />
        <activity android:name=".TapiocaGameLauncher" />
        <activity android:name=".TilesGameLauncher" />
        <activity android:name=".MazeGameLauncher" />
        <activity android:name=".TilesGame.GameFinish" />
        <activity android:name=".MainActivity" />
        <activity android:name=".TapiocaLauncher.TapiocaGameActivity" />
        <activity android:name=".TilesGame.TileGameActivity" />
        <activity
            android:name=".MazeGame.MazeGameActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".GameOverActivity" />
    </application>

</manifest>